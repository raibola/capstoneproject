<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Menu Item</h1>

<!-- #1 -->
      <form action="/menu/<%= menu.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Menu name</label>
<!-- #2 -->
          <input value="<%= menu.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
<!-- #3 -->
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= menu.description %></textarea>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input value="<%= menu.price %>" type="text" class="form-control" name="price" aria-describedby="titleHelp" placeholder="Enter Price">
          </div>
          <div class="form-group">
                <label for="imgsrc">Image Source</label>
                <input value="<%= menu.imgsrc %>" type="text" class="form-control" name="imgsrc" aria-describedby="titleHelp" placeholder="Enter Image Source">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>